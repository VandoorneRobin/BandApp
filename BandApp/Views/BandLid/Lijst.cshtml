
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Lijst Met Leden</title>
</head>
<body>
    <h2>Bands Met Leden</h2>

    <ul>
        @foreach (var band in ViewBag.Bands)
        {
            @foreach (var bandlid in band.Leden)
            {
                <li>
                    [@band.Naam] @bandlid.Naam - @bandlid.Leeftijd @(!bandlid.Levend ? "(+)" : "" ) - @bandlid.Geslacht
                </li>
            }
        }
    </ul>
    

</body>
</html>

